{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowUnreachableCode": false,
    "typeRoots": ["./typings"],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  }
}
